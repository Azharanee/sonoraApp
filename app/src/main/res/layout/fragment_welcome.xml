<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEA6600"
    android:paddingTop="5dp"
    android:paddingBottom="2dp"
    >

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="730dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="195dp"
            android:layout_height="60dp"
            android:layout_marginTop="200dp"
            android:contentDescription="Sonora logo"
            android:src="@drawable/sonora_welcome_image" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="292dp"
            android:layout_height="23dp"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="A place where you can enjoy your mp3"
            android:textColor="#FFFFFFFF"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/welcome_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="bottom"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="Music illustration"
            android:src="@drawable/girl_listen_to_music"
            android:layout_marginBottom="16dp"/>



